@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Add Employee</h1>
<div asp-validation-summary="All"></div>
<form asp-action="Edit" enctype="multipart/form-data">
    @*image*@
    <div class="form-group">
        <input asp-for="ImageName" hidden />
        @if (Model.ImageName is not null)
        {
            <center class=" m-4">
                <label>
                    <img src="~/Files/Images/@Model.ImageName
                    " alt="@Model.Name image" class="rounded-circle" width="200" height="200" />
                </label>
            </center>

        }
    </div>
    <partial name="partialViews/_EmpCreateEditPartialView" />
    <input type="submit" value="Save" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>
@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />

}