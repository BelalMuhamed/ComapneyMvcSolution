@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    

<center class=" m-4"><h1>Roles </h1></center>

@if (TempData["RoleAdded"] != null)
{
    <div class="alert alert-success text-black fade-out">
        @TempData["RoleAdded"]
    </div>
}

@if (@Model.Count() > 0)
{
    <form asp-action="Index">
        <div class="m-4">
            <input class="form-control d-inline w-75" type="text" name="SearchValue" />
            <input type="submit" value="Search" class="btn btn-light" asp-action="Index" />
        </div>
    </form>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(r => r.Id)</td>
                <td>@Html.DisplayNameFor(r => r.roleName)</td>
                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.roleName</td>
                    <partial name="_BuutonsPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center class=" bg-warning "><h2>There isn't any Roles</h2></center>
}

<a asp-action="Create"  class="btn btn-dark mt-4"> Add Role <i class="fa-solid fa-plus"></i> </a>
