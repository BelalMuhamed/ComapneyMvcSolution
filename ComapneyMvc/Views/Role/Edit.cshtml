@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.roleName Role</h1>

<form asp-action="Edit" >

    <partial name="PartialViews/_RoleCreateEditPartialView" />


    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
    <a asp-action="AddOrRemoveUser" asp-route-roleId="@Model.Id" class="btn btn-dark">Add Or Remove User in role</a>


</form>

@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />

}
