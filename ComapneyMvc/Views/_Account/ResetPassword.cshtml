@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AccountLayOut.cshtml";
}


<div asp-validation-summary="All"></div>
<form asp-action="ResetPassword" id="signup-form" class="signup-form">
    <h2>Reset PAssword  </h2>
    <div class="form-group">
        <input asp-for="@Model.NewPassword" class="form-input" id="name" placeholder="New password " />
        <span asp-validation-for="@Model.NewPassword"></span>
    </div>
    <div class="form-group">
        <input asp-for="@Model.ConfirmNewPassword" class="form-input" id="name" placeholder="Confirm new password" />
        <span asp-validation-for="@Model.ConfirmNewPassword"></span>
    </div>

    <div class="form-group">
        <input type="submit" name="submit" id="submit" class="form-submit submit" value="Reset" />
    </div>
</form>
@section ClientValidation
{
    <partial name="_ValidationScriptsPartial" />
}