@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayOut.cshtml";
}

<div asp-validation-summary="All"></div>
<form asp-action="SendEmail" id="signup-form" class="signup-form">
    <h2>Reset Password </h2>
    <div class="form-group">
        <input asp-for="@Model.Email" class="form-input" id="name" placeholder="Your Email" />
        <span asp-validation-for="@Model.Email"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" name="submit" id="submit" class="form-submit submit" value=" Reset Password" />
    </div>
</form>
@section ClientValidation
{
    <partial name="_ValidationScriptsPartial" />
}

